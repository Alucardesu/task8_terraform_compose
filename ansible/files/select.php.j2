<?php

$db_handle = pg_connect("host={{ lb_ip }} dbname={{ db_name }} user={{ db_user }} password={{ db_password }}");

if ($db_handle) 
{

    $sql = "SELECT item,quantity FROM inventory";
    $result = pg_exec($db_handle, $sql);

    if ($result) 
    {
        echo "<style> table, th, td { border: 1px solid black; } </style> <body> <table>";

        while ($row = pg_fetch_assoc($result)) 
        {    
            echo "<tr>";
            echo "<td>" . $row['item'] . "</td>";
            echo "<td>" . $row['quantity'] . "</td>";
            echo "</tr>";
        }
        echo "</table>";
        echo "<a href='webapp.php'>Go back</a>";
        echo "</body>";
    } 
    else 
    {

        echo "The query failed with the following error:<br>";    
        echo pg_errormessage($db_handle);    
    }    
    
    pg_close($db_handle);

} 
else 
{

    echo 'Connection attempt failed.';

}

?>